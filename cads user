<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Cadastro</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        input {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        button:hover {
            background-color: #45a049;
        }
        .error {
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }
        .success {
            color: green;
            font-size: 16px;
            margin-top: 20px;
            padding: 10px;
            background-color: #e8f5e9;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <h1>Cadastro de Usuário</h1>
    <form id="cadastroForm">
        <div class="form-group">
            <label for="nome">Nome Completo:</label>
            <input type="text" id="nome" name="nome">
            <div id="nomeError" class="error"></div>
        </div>
        
        <div class="form-group">
            <label for="usuario">Nome de Usuário:</label>
            <input type="text" id="usuario" name="usuario">
            <div id="usuarioError" class="error"></div>
        </div>
        
        <div class="form-group">
            <label for="senha">Senha (mínimo 6 caracteres):</label>
            <input type="password" id="senha" name="senha">
            <div id="senhaError" class="error"></div>
        </div>
        
        <div class="form-group">
            <label for="email">E-mail:</label>
            <input type="text" id="email" name="email">
            <div id="emailError" class="error"></div>
        </div>
        
        <div class="form-group">
            <label for="dataNascimento">Data de Nascimento:</label>
            <input type="date" id="dataNascimento" name="dataNascimento">
            <div id="dataNascimentoError" class="error"></div>
        </div>
        
        <button type="button" id="cadastrarBtn">Cadastrar</button>
    </form>
    
    <div id="successMessage" class="success" style="display: none;"></div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
    const cadastrarBtn = document.getElementById('cadastrarBtn');
    const form = document.getElementById('cadastroForm');
    const successMessage = document.getElementById('successMessage');
    
   
    function limparErros() {
        const errorElements = document.querySelectorAll('.error');
        errorElements.forEach(element => {
            element.textContent = '';
        });
    }
    
  
    function exibirErro(campoId, mensagem) {
        const errorElement = document.getElementById(`${campoId}Error`);
        errorElement.textContent = mensagem;
    }
    
    
    function validarEmail(email) {
        const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return re.test(email);
    }
    
   
    function calcularIdade(dataNascimento) {
        const hoje = new Date();
        const nascimento = new Date(dataNascimento);
        let idade = hoje.getFullYear() - nascimento.getFullYear();
        const mes = hoje.getMonth() - nascimento.getMonth();
        
        if (mes < 0 || (mes === 0 && hoje.getDate() < nascimento.getDate())) {
            idade--;
        }
        
        return idade;
    }
    
    
    function validarFormulario() {
        limparErros();
        
        
        const nome = document.getElementById('nome').value.trim();
        const usuario = document.getElementById('usuario').value.trim();
        const senha = document.getElementById('senha').value;
        const email = document.getElementById('email').value.trim();
        const dataNascimento = document.getElementById('dataNascimento').value;
        
        try {
            
            if (!nome) {
                throw { campo: 'nome', mensagem: 'O nome completo é obrigatório.' };
            }
            if (nome.length < 3) {
                throw { campo: 'nome', mensagem: 'O nome deve ter pelo menos 3 caracteres.' };
            }
            
            
            if (!usuario) {
                throw { campo: 'usuario', mensagem: 'O nome de usuário é obrigatório.' };
            }
            if (usuario.length < 4) {
                throw { campo: 'usuario', mensagem: 'O usuário deve ter pelo menos 4 caracteres.' };
            }
            
           
            if (!senha) {
                throw { campo: 'senha', mensagem: 'A senha é obrigatória.' };
            }
            if (senha.length < 6) {
                throw { campo: 'senha', mensagem: 'A senha deve ter pelo menos 6 caracteres.' };
            }
            
           
            if (!email) {
                throw { campo: 'email', mensagem: 'O e-mail é obrigatório.' };
            }
            if (!validarEmail(email)) {
                throw { campo: 'email', mensagem: 'Por favor, insira um e-mail válido.' };
            }
            
           
            if (!dataNascimento) {
                throw { campo: 'dataNascimento', mensagem: 'A data de nascimento é obrigatória.' };
            }
            
            const idade = calcularIdade(dataNascimento);
            if (idade < 18) {
                throw { campo: 'dataNascimento', mensagem: 'Você deve ter pelo menos 18 anos para se cadastrar.' };
            }
            
       
            return true;
            
        } catch (erro) {
            exibirErro(erro.campo, erro.mensagem);
            return false;
        }
    }
    
   
    cadastrarBtn.addEventListener('click', function() {
        successMessage.style.display = 'none';
        
        if (validarFormulario()) {
            
            setTimeout(() => {
                successMessage.textContent = 'Cadastro realizado com sucesso!';
                successMessage.style.display = 'block';
                form.reset();
            }, 1000);
        }
    });
});

    </script>
</body>
</html>
